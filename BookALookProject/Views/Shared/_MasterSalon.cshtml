<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="~/Content/my-css/master.css" rel="stylesheet" />
    <link href='https://unpkg.com/boxicons@2.1.1/css/boxicons.min.css' rel='stylesheet'>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
    <link rel="stylesheet" href="https://ajax.googleapis.com/ajax/libs/jqueryui/1.12.1/themes/smoothness/jquery-ui.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jqueryui/1.12.1/jquery-ui.min.js"></script>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.7.2/css/all.css" integrity="sha384-fnmOCqbTlWIlj8LyTjo7mOUStjsKC4pOpQbqyi7RrhN7udi9RwhKkMHpvLbHG9Sr" crossorigin="anonymous" />
    <title>BookALook</title>
</head>
<body>
    <nav>
        <div class="nav-bar">
            <i class='bx bx-menu sidebarOpen'></i>
            <span class="logo navLogo">
                <a href="@Url.Action("Index","Home")"><img src="~/Content/images/logo250.png" /></a>
            </span>

            <div class="menu">
                <div class="logo-toggle">
                    <span class="logo"><a href="@Url.Action("Index","Home")"><img src="~/Content/images/logo250.png" /></a></span>
                    <i class='bx bx-x siderbarClose'></i>
                </div>

                <ul class="nav-links">
                    
                    <li class="nav-link-salon">@Html.ActionLink("Edit info", "Edit", "Home")</li>
                        <li class="nav-link-salon">@Html.ActionLink("Current appointments", "Appointments", "Home")</li>
                        <li class="nav-link-user">
                            <form id="logoutForm" method="post" action="@Url.Action("Logoff","Account")">
                                @Html.AntiForgeryToken()
                                <a class="logout-btn" onclick="document.getElementById('logoutForm').submit();">Sign out</a>
                            </form>
                        </li>

                </ul>
            </div>

            <div class="container-searchBox">
                <div class="searchBox">
                    <div class="searchToggle">
                        <i class='bx bx-x cancel'></i>
                        <i class='bx bx-search search'></i>
                    </div>

                    <form class="search-field" id="searchBarForm" action="@Url.Action("SearchSalons","Home")" method="get">
                        <input type="text" placeholder="Search..." name="Search">
                        <i class='bx bx-search' onclick="document.getElementById('searchBarForm').submit();"></i>
                    </form>
                </div>
            </div>
        </div>
    </nav>

    <article>
        @RenderBody()
    </article>

    <footer>
        <div class="footer-container">        
            <div class="footer-logo">
                <img src="~/Content/images/logo250.png" />
                <p>BookALook © @DateTime.Now.Year</p>
            </div>
            <div class="footer-links">
                <p>Navigation:</p>
                <ul>
                    <li><a href="@Url.Action("ListSalons", "Home")"></a></li>
                    <li><a href="@Url.Action("Salons", "Home", new { category = "Hair" })">Hair</a></li>
                    <li><a href="@Url.Action("Salons", "Home", new { category = "Makeup" })">Makeup</a></li>
                    <li><a href="@Url.Action("Salons", "Home", new { category = "Nails" })">Nails</a></li>
                    <li><a href="@Url.Action("Salons", "Home", new { category = "Lashes & Brows" })">Lashes & Brows</a></li>
                    <li><a href="@Url.Action("Salons", "Home", new { category = "Skin" })">Skin</a></li>
                    <li><a href="@Url.Action("Salons", "Home", new { category = "Hair Removal" })">Hair Removal</a></li>
                </ul>
            </div>
        </div>
    </footer>
    <script src="~/Content/my-js/master.js"></script>
</body>
</html>
